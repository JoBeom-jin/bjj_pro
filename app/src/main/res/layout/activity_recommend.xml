<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity"
    android:background="@drawable/back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_weight="5"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:id="@+id/menu_bt1"
            android:background="@drawable/menu_bt1"/>


        <Button
            android:layout_weight="5"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:id="@+id/menu_bt2"
            android:background="@drawable/menu_bt2"/>

        <Button
            android:layout_weight="5"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:id="@+id/menu_bt3"
            android:background="@drawable/home_bt2"/>

        <Button
            android:layout_weight="5"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:id="@+id/menu_bt4"
            android:background="@drawable/menu_bt3"/>

        <Button
            android:layout_weight="5"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:id="@+id/menu_bt5"
            android:background="@drawable/menu_bt4"/>

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜입니당"
            android:textSize="15dp"
            android:id="@+id/date_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 추천!!!"
            android:textColor="@color/fontblack"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="@drawable/place_pic"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="13dp"
            android:textColor="@color/fontblack"
            android:text="장소명:"/>


        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/fontblack"
            android:textSize="13dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="13dp"
            android:textColor="@color/fontblack"
            android:text="주소:"/>


        <TextView
            android:id="@+id/addr_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/fontblack"
            android:textSize="13dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="13dp"
            android:textColor="@color/fontblack"
            android:text="전화번호:"/>


        <TextView
            android:id="@+id/phone_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/fontblack"
            android:textSize="13dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:gravity="center">


    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/money_recommend"
        android:text="금액으로 추천받기"/>

    </LinearLayout>


</LinearLayout>